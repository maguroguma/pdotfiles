# dotfiles
export DOTFILES_DIR="$HOME/dotfiles"

# pyenv, virtualenv
export PYENV_ROOT=$HOME/.pyenv
export PATH=$PYENV_ROOT/bin:$PATH
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# @os-dependency
eval "$(direnv hook zsh)"

# nodebrew
# @os-dependency
export PATH=$HOME/.nodebrew/current/bin:$PATH

# goenv（上2行は旧goの設定）
# @os-dependency
export GOPATH=$HOME/go
export GOBIN=$HOME/go/bin
export PATH=$PATH:/usr/local/opt/go/libexec/bin:$GOPATH/bin
export PATH=$PATH:/usr/local/go/bin
# export PATH="$HOME/.goenv/bin:$PATH"
# eval "$(goenv init -)"
# go modules
export GO111MODULE=on

# 競技プログラミング用
# @os-dependency
export GOCOMPE=$GOPATH/src/github.com/maguroguma/go-competitive

# symfony
# @os-dependency
export PATH=$PATH:/usr/local/bin

# my shell scripts
# @os-dependency
export PATH=$PATH:$HOME/bin

# memolist.vim
# @os-dependency
export MEMOLIST_VIM=$HOME/OneDrive/memolist.vim

# pip
# @os-dependency
export PATH=$PATH:$HOME/.local/bin

# @os-dependency
export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH:$HOME/dotfiles/scripts"

# deno
export DENO_INSTALL=$HOME/.deno
export PATH="$DENO_INSTALL/bin:$PATH"

# fzwiki
export FZWIKI_LANG="ja"

# 独自ファイルなどのPATH
export PATH=$PATH:$HOME/mybin
