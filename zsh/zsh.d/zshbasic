# today zle
today-for-zle() {
    local result=$(date +%Y-%m-%d)
    zle reset-prompt
    LBUFFER+=$result
}
zle -N today-for-zle
bindkey '^aday' today-for-zle

# 標準出力・エラー両方をファイルにも出力する
std-out-and-err-to-file() {
    zle reset-prompt
    LBUFFER+="2>&1 | tee "
}
zle -N std-out-and-err-to-file
bindkey '^atee' std-out-and-err-to-file

