; https://editorconfig-specification.readthedocs.io/
root = true

charset = utf-8
end_of_line = lf

[*.go]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,ts,py}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
